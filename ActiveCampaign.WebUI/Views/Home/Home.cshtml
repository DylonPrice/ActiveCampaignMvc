@using ActiveCampaign.Domain.Entities;
@using EyeSoft.ActiveCampaign
@model Tuple<IEnumerable<List>, IEnumerable<Contact>, IEnumerable<Campaign>>

<script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.2.js"></script>
<script type="text/javascript">
    $(function() {
        $("#activeApi").change(function() {
            if ($(this).val() === "CONT") {
                $("#contacts").show();
                $("#lists").hide();
                $("#campaigns").hide();
            }
            if ($(this).val() === "LIST") {
                $("#lists").show();
                $("#contacts").hide();
                $("#campaigns").hide();
            }
            if ($(this).val() === "CAMP") {
                $("#campaigns").show();
                $("#contacts").hide();
                $("#lists").hide();
            }
            if ($(this).val() === "NULL") {
                $("#contacts").hide();
                $("#lists").hide();
                $("#campaigns").hide();
            }
        });
    });
</script>
<style type="text/css">
    .row {
        padding-top: 5px;
    }
</style>
@{
    ViewBag.Title = "Home";
}

<h2>Home</h2>

<p>Select an option from the dropdown that you'd like to work with.</p>
<select id="activeApi">
    <option value="NULL"></option>
    <option value="CONT">Contacts</option>
    <option value="LIST">Lists</option>
    <option value="CAMP">Campaigns</option>
</select>
<div id="contacts" class="container" style="display: none; padding-top: 10px">
    @using (Html.BeginForm("GetContacts", "Home"))
    {
        <div class="row">
            <div class="col-md-2 text-right">Contact Id: </div>
            <div class="col-md-3">
                <input type="text" name="contactId"/>
            </div>
            <div class="col-md-1">
                <button class="btn btn-default">Search</button>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-2">
            @Html.ActionLink("View All Contacts", "GetContacts", new { id = "all" }, new {@class = "btn btn-default"})
        </div>
    </div>
    <div style="clear: both"></div>
    <div class="panel panel-default">
        <div class="panel-body">
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th class="text-center">ID</th>
                    <th class="text-center">Name</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">Delete</th>
                </tr>
                @foreach (var item in Model.Item2)
                {
                    <tr>
                        <td class="text-center">@item.Id</td>
                        <td class="text-center">@Html.ActionLink(item.FirstName + " " + item.LastName, "EditContact", item)</td>
                        <td class="text-center">@item.Email</td>
                        <td class="text-center">
                            @Html.ActionLink("Delete", "DeleteContact", item, new {@class = "btn btn-default"})
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="panel-footer">
            @Html.ActionLink("New Contact", "CreateContact", null, new{@class = "btn btn-default"})
        </div>
    </div>

</div>
<div id="lists" class="container" style="display: none; padding-top: 10px">
    @using (Html.BeginForm("GetLists", "Home"))
    {
        <div class="row">
            <div class="col-md-2 text-right">List Id: </div>
            <div class="col-md-3">
                <input type="text" name="listId" />
            </div>
            <div class="col-md-1">
                <button class="btn btn-default">Search</button>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-1">
            @Html.ActionLink("View All Lists", "GetLists", new {id = "all"}, new{@class = "btn btn-default"})
        </div>
    </div>
    <div style="clear: both"></div>
    <div class="panel panel-default">
        <div class="panel-body">
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th class="text-center">ID</th>
                    <th class="text-center">Name</th>
                    <th class="text-center">Delete</th>
                </tr>
                @foreach (var list in Model.Item1)
                {
                    <tr>
                        <td class="text-center">@list.Id</td>
                        <td class="text-center">@Html.ActionLink(list.Name, "EditList", list)</td>
                        <td class="text-center">
                            @Html.ActionLink("Delete", "DeleteList", list, new {@class = "btn btn-default"})
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="panel-footer">
            @Html.ActionLink("New List", "CreateList", null, new{@class="btn btn-default"})
        </div>
    </div>
</div>
<div id="campaigns", class="container" style="display: none; padding-top: 10px">
    @using (Html.BeginForm("GetCampaigns", "Home"))
    {
        <div class="row">
            <div class="col-md-2 text-right">Campaign Id: </div>
            <div class="col-md-3">
                <input type="text" name="campaignId" />
            </div>
            <div class="col-md-1">
                <button class="btn btn-default">Search</button>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-2">
            @Html.ActionLink("View All Campaigns", "GetCampaigns", new {id = "all"}, new{@class = "btn btn-default"})
        </div>
    </div>
    <div style="clear: both"></div>
    <div class="panel panel-default">
        <div class="panel-body">
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th class="text-center">ID</th>
                    <th class="text-center">Name</th>
                    <th class="text-center">Type</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Delete</th>
                </tr>
                @foreach (var campaign in Model.Item3)
                {
                    <tr>
                        <td class="text-center">@campaign.Id</td>
                        <td class="text-center">@Html.ActionLink(campaign.Name, "ViewCampaign", campaign)</td>
                        <td class="text-center">
                            @Html.ActionLink("Delete", "DeleteCampaign", campaign, new { @class = "btn btn-default" })
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="panel-footer">
            @Html.ActionLink("New Campaign", "CreateCampaign", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div>


