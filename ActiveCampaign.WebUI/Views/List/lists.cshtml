@using ActiveCampaign.Domain.Entities;
@model IEnumerable<List>

@{
    ViewBag.Title = "Lists";
}

<h2>Lists</h2>

<div id="lists" class="container" style="padding-top: 10px">
    @using (Html.BeginForm("GetLists", "List"))
    {
        <div class="row">
            <div class="col-md-2 text-right">List Id: </div>
            <div class="col-md-3">
                <input type="text" name="listId" />
            </div>
            <div class="col-md-1">
                <button class="btn btn-default">Search</button>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-1">
            @Html.ActionLink("View All Lists", "GetLists", new { id = "all" }, new { @class = "btn btn-default" })
        </div>
    </div>
    <div style="clear: both"></div>
    <div class="panel panel-default">
        <div class="panel-body">
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th class="text-center">ID</th>
                    <th class="text-center">Name</th>
                    <th class="text-center">Delete</th>
                </tr>
                @foreach (var list in Model)
                {
                    <tr>
                        <td class="text-center">@list.Id</td>
                        <td class="text-center">@Html.ActionLink(list.Name, "EditList", list)</td>
                        <td class="text-center">
                            @Html.ActionLink("Delete", "DeleteList", list, new { @class = "btn btn-default" })
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="panel-footer">
            @Html.ActionLink("New List", "CreateList", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div>
