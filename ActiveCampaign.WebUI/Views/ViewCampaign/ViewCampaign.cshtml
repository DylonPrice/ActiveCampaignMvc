@using EyeSoft.Reflection;
@model ActiveCampaign.Domain.Entities.Campaign

@{
    ViewBag.Title = "ViewCampaign";
}

<h2>View Campaign</h2>

<div class="container">
    @foreach (var property in ViewData.ModelMetadata.Properties)
    {
        <div class="form-group">
            <label class="text-right">@(property.DisplayName ?? property.PropertyName)</label>
            @Html.TextBox(property.PropertyName, Model.GetPropertyValue(property.PropertyName), new { @class = "disabled form-control", @readonly = "readonly" })
        </div>
    }
    <div class="col-md-1">
        @Html.ActionLink("Back", "Back", null, new { @class = "btn btn-default"})
    </div>
</div>