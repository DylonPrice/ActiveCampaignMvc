@using ActiveCampaign.Domain.Entities;
@model IEnumerable<Contact>

@{
    ViewBag.Title = "Contacts";
}

<h2>Contacts</h2>

<div id="contacts" class="container" style="padding-top: 10px">
    @using (Html.BeginForm("GetContacts", "Contact"))
    {
        <div class="row">
            <div class="col-md-2 text-right">Contact Id: </div>
            <div class="col-md-3">
                <input type="text" name="contactId" />
            </div>
            <div class="col-md-1">
                <button class="btn btn-default">Search</button>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-2">
            @Html.ActionLink("View All Contacts", "GetContacts", new { id = "all" }, new { @class = "btn btn-default" })
        </div>
    </div>
    <div style="clear: both"></div>
    <div class="panel panel-default">
        <div class="panel-body">
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th class="text-center">ID</th>
                    <th class="text-center">Name</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">Delete</th>
                </tr>
                @foreach (var contact in Model)
                {
                    <tr>
                        <td class="text-center">@contact.Id</td>
                        <td class="text-center">@Html.ActionLink(contact.FirstName + " " + contact.LastName, "EditContact", contact)</td>
                        <td class="text-center">@contact.Email</td>
                        <td class="text-center">
                            @Html.ActionLink("Delete", "DeleteContact", contact, new { @class = "btn btn-default" })
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="panel-footer">
            @Html.ActionLink("New Contact", "CreateContact", null, new { @class = "btn btn-default" })
        </div>
    </div>

</div>

